{
  "extends": "@hotcakes/core/lib/tsconfig.json",
  "exclude": [
    "node_modules",
    "out",
    "dist",
    ".next",
    "build",
    "test-results"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve"
  }
}
