{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"checkJs": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": [
			"esnext",
			"dom",
			"dom.iterable"
		],
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"strict": true,
		"target": "ES6",
		"module": "Preserve",
		"moduleResolution": "Bundler"
	},
  "include": [
    "next-env.d.ts",
    "src",
    "scripts",
    "__tests__"
  ],
	"exclude": ["**/node_modules", "**/dist"]
}
