{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "packages/types"
    ],
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "target": "ESNext",
    "module": "Preserve",
    "moduleResolution": "Bundler"
  },
  "include": [
    "next-env.d.ts",
    "src",
    "packages",
    "__tests__"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./packages/types"
    },
  ]
}