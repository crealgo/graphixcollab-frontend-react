{
  "compilerOptions": {
    "target": "ES3",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@assets/*": [
        "src/assets/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@configs/*": [
        "src/configs/*"
      ],
      "@contexts/*": [
        "src/contexts/*"
      ],
      "@global/*": [
        "src/global/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
    },
  },
  "include": [
    "src"
  ]
}
